page{
  height: 100%;
}
/*艺术家主页  */
.artist-media,.company-media{
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  background-color: #fff;
  transform: translateY(-10px);
  padding-bottom: 15px;
}
.artist-banner,.company-banner{
  width: 100%;
  height: 941rpx;
  position: relative;
}


.company-banner image, .artist-banner image{
  width: 100%;
  height: 100%;
}

.company-media,artist-media{
  background-color: #fff;
}

.artist-media .weui-media-box__hd_in-appmsg{
  margin-top: -130rpx;
  width: 180rpx;
  height: 180rpx;
  position: relative;
}

 .artist-media .weui-media-box__hd_in-appmsg image{
  border-radius: 100%;
}

.company-media .weui-media-box{
  padding: 14rpx 15px 15px;
}

 .company-media .weui-media-box__hd_in-appmsg{
  margin-top: -90rpx;
  width: 180rpx;
  height: 180rpx;
  position: relative;
}

 .company-media .weui-media-box__hd_in-appmsg image{
  border-radius: 100%;
}

.vip-icon{
  position: absolute;
  right: 0;
  bottom: 0;
  width: 40rpx;
  height: 40rpx;
}

.box-wrap{
  /* margin-top: 20rpx; */
  background-color: #fff;
}

.box-inner{
  padding: 15px;
}

.box-inner .box-title{
  font-size: 18px;
  color: #27282D;
  padding-bottom: 15px;
}
.box-inner .box-content{
  font-size: 15px;
  color: #000;
}

#company .weui-media-box_appmsg{
  align-items: stretch;
}
 .box-inner .weui-media-box__hd_in-appmsg{
  width: 180rpx;
  height: 240rpx;
} 
.box-inner_padding .weui-media-box{
  padding: 15px 0;
}
.box-inner_padding .weui-media-box:first-child{
  padding-top: 0;
}

.commentItemWrp{
  background-color: #fff;
}

.borderBg{
  height: 20rpx;
  background-color: #f7f7f7;
}
.btn-share{
  position: absolute;
  right: 30rpx;
  bottom: 50rpx;
  z-index: 11;
}

