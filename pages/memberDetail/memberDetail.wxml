<import src="../../template/commentItem/commentItem.wxml"/>
<import src="../../template/artistListScroll/artistListScroll.wxml"/>
<import src="../../template/productListScroll/productListScroll.wxml"/>
<view id='person' wx:if="{{type==1}}">
     <view class='artist-banner'>
        <button class='btn-share' open-type="share" plain='{{true}}'></button>
        <image src='{{userInfo.backgroundImage}}' mode='aspectFill'></image>
   </view>
  <view class='artist-media' style='padding-bottom:0px;'>
        <view class="weui-media-box weui-media-box_appmsg">
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb" mode='aspectFill' src="{{userInfo.avatarUrl}}" />
              <image wx:if="{{userInfo.isVip}}" class="vip-icon" src='https://img.kanhua.yiwaiart.com/Ey_logo_flat.png'></image>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
            <view class="weui-media-box__title">{{userInfo.nickName}}</view>
            </view>
        </view>
         <view style='padding:0 15px;font-size:15px;'>{{userInfo.signature}}</view>  
  </view>
  <view wx:if="{{dataList.length>0 || bestCommentArr.length>0}}">
      <view class='borderBg'></view>
        <template is="commentItem2"  wx:for="{{bestCommentArr}}" wx:key="" data="{{...item}}"></template>
  <template is="commentItem2"  wx:for="{{dataList}}" wx:key="" data="{{...item}}"></template>
  </view>
  <!-- <view style='color:#999;' wx:else>该用户很懒，什么都没有留下！</view> -->

</view>

