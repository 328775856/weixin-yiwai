@import "../../lib/wxParse/wxParse/wxParse.wxss";
@import '../../template/commentItem/commentItem.wxss';
@import '../../template/productListScroll/productListScroll.wxss';

#detailWrp {
  padding-bottom: 100rpx;
}

.headerImgWrp {
  text-align: center;
  position: relative;
  overflow: hidden;
  /* padding: 0 50rpx; */
}

.headerImgWrp .imgLoading {
  position: absolute;
  width: 130rpx;
  height: 130rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.headerImgWrp .bgWrp {
  width: 100%;
  height: 400px;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center top;
  filter: blur(6px);
  position: absolute;
  top: -10px;
  left: -10px;
}

.propWrp {
  font-size: 30rpx;
  color: #333;
  line-height: 56rpx;
  margin-bottom: 40rpx;
}

.propWrp .nameWrp {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.propWrp  .lblWrp {
  width: 200rpx;
}

.descWrp {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.descWrp .artistNameWrp {
  font-size: 36rpx;
  font-weight: bold;
  color: #27282d;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.descWrp .artistNameWrp .t1 {
  font-size: 26rpx;
  color: #868686;
  margin-left: 10rpx;
}

.descWrp .textWrp {
  overflow: hidden;
  font-size: 30rpx;
  color: #333;
  line-height: 52rpx;
  /* max-height: 100rpx; *//* max-height: 300rpx; *//* overflow: hidden; */
}

.btnOpenAll {
  margin-top: 20rpx;
  text-decoration: underline;
  font-size: 28rpx;
  color: blue;
}

.mediaWrp {
  padding-left: 30rpx;
  margin: 40rpx 0 40rpx 0;
  height: 310rpx;
}

.mediaWrp .itemWrp {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-right: 20rpx;
}

.mediaWrp .itemWrp .itemInrWrp {
  position: relative;
  /* background-color: #000; */
  width: 100%;
  height: 100%;
  border-radius: 17rpx 17rpx 17rpx 5rpx;

  /* background-image: url(https://img.kanhua.yiwaiart.com/picture/default_bg_2.png); */
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.mediaWrp .itemWrp .itemInrWrp image {
  width: 74rpx;
  height: 53rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.mediaWrp .itemWrp .itemInrWrp .wordsWrp {
  position: absolute;
  bottom: 30rpx;
  color: #fff;
  font-size: 36rpx;
  padding: 0 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.simpleCommentWrp .headWrp {
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.simpleCommentWrp .headWrp .t1 {
  color: #27282d;
  font-size: 36rpx;
}

.simpleCommentWrp .headWrp .t2 {
  color: #fbca00;
  font-size: 30rpx;
  align-self: flex-end;
}

.simpleCommentWrp .quesWrp {
  background-color: #292929;
  border-radius: 5rpx;
  font-size: 30rpx;
  line-height: 52rpx;
  color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.lineWrp {
  width: 100%;
  border-top: 20rpx solid #f6f6f6;
  /* border-top:20rpx solid gray; */
  height: 0;
}

.btnMore {
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

.interestWrp  .t1 {
  color: #27282d;
  font-size: 36rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.plr30 {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
