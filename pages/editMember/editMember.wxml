<!--pages/EditMember/EditMember.wxml-->
<view id='editMember'>
<form bindsubmit="handleSubmit">
  <view class="weui-cell">
    <view class="weui-cell__hd">
        <view class="weui-label">头像</view>
      </view>
    <view class="weui-cell__bd">
       <image class='avatarImg' src="{{avatarUrl}}" mode="aspectFill"></image>
    </view>
   </view>
     <view class="weui-cell">
    <view class="weui-cell__hd">
        <view class="weui-label">昵称</view>
      </view>
    <view class="weui-cell__bd">
       <text>{{nickName}}</text>
    </view>
   </view>
    <view class="weui-cell">
    <view class="weui-cell__hd">
        <view class="weui-label">性别</view>
      </view>
    <view class="weui-cell__bd">
       <text>{{gender==1 ? "男" : "女"}}</text>
    </view>
   </view>
    <view class="weui-cell weui-cell_select">
       <view class="weui-cell__hd weui-cell__hd_in-select-after">
          <view class="weui-label">年龄</view>
          </view>
          <view class="weui-cell__bd">
          <picker  bindchange="bindAgeChange" value="{{ageIndex}}" range="{{ageList}}">
            <view class="weui-select weui-select_in-select-after">{{ageList[ageIndex] ||age||'请选择'}}</view>
          </picker>
        </view>
      </view>

      <view class="weui-cell weui-cell_input">
          <view class="weui-cell__hd">
            <view class="weui-label">签名</view>
              </view>
              <view class="weui-cell__bd">
              <!-- <view class="weui-input" wx:if="{{!isYour}}">{{signature||'这个人很懒，什么都没留下'}}</view> -->
              <input maxlength='30' type="text" name="signature" value="{{signature}}"  class="weui-input" bindinput="handleInput" placeholder="你还没有填写个人签名哦"/>
          </view>
      </view>

      <view class="weui-cell" wx:if="{{type==2 || type==3}}">
          <view class="weui-cell__hd">
            <view class="weui-label">简介</view>
              </view>
              <view class="weui-cell__bd">
<textarea wx:if="{{isHideTextArea}}" class="weui-textarea" name="artDescription" bindinput='handleTextArea' value="{{artDescription}}" placeholder="请输入文本" style="height: 4em" />
          </view>
      </view>

      <view class="weui-cell">
          <view class="weui-cell__hd">
            <view class="weui-label">封面</view>
              </view>
              <view class="weui-cell__bd">
                <view class='backgroundImage' bindtap='changeBackground'>
                    <image class="" mode='aspectFill' src="{{backgroundImage}}"></image> 
                </view>
              </view>
      </view>

              <view class="weui-btn-area">
            <button class="ey-btn btn-primary" formType="submit" >保存</button>
        </view>
</form>
</view>


<view class="picture_modal {{isShow ? 'active' : '' }}">
  <view class='container'>
    <image bindtap='chooseImage' data-idx="{{index}}" src='{{item.url}}?imageView2/1/w/330/h/330/q/50'  wx:for="{{list}}" mode='widthFix' wx:key="{{index}}"></image> 
</view>
</view>

