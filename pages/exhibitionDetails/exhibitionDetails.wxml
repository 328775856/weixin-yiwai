<view id="exhibitionDetails" wx:if="{{customerId!=0}}">
  <!-- 头部图片 begin -->
  <view class="headerImgWrp">
    <image wx:if="{{isImgLoading}}" class="imgLoading" src="https://img.kanhua.yiwaiart.com/ironman/loading.gif?imageView2/2/w/130/h/130/q/50"></image>
    <view wx:if="{{!isImgLoading}}" class="bgWrp blur" style="background-image: url('{{details.image}}?imageView2/1/w/750/h/470/q/50'); width:{{windowWidth+40}}px;"></view>
    <view class="descWrp mui-flex">
      <image src="{{ details.image }}" class="imgPosterWrp" mode="aspectFill" bindload="bindload" bindtap="previewImage" data-url="{{details.image}}"></image>
      <view class="lWrp cell">
        <view class="bk">{{details.exhibitionName}}</view>
        <view class="dateWrp">{{details.exhibitionStartTime}}-{{details.exhibitionEndTime}}</view>
        <view class="posiWrp">{{details.place}}</view>
      </view>
    </view>
  </view>
  <!-- 头部图片 end -->

  <view class="lineWrp"></view>
  <!-- 展览信息 begin -->
  <view class="showInfoWrp plr30">
    <view class="titleWrp">展览信息</view>

    <view id="textWrp" class="textWrp" style="height:{{limitHeight==0?'auto':limitHeight+'px;'}}">
      <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>
    <view wx:if="{{isShowOpen}}" class="btnOpenAll" bindtap="tapOpenAll">{{isOpen?'收起':'展开'}}</view>
  </view>
  <!-- 展览信息 end -->
  <view class="lineWrp"></view>
  <!-- 参展艺术家 begin -->
  <view class="artistWrp" wx:if="{{artistList.length>0}}">
