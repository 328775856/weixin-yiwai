  <!-- 作品列表 begin -->
  <view class="productWrp" wx:if="{{productList.length>0}}">
    <view class="titleWrp plr30">作品</view>

    <template is="productListScroll" data="{{productList,isMore}}"></template>
  </view>
  <!-- 作品列表 end -->
  <view class="lineWrp" wx:if="{{productList.length>0}}"></view>

  <!-- 评论 begin -->
  <view class="commentWrp">
    <view class="plr30 titleWrp mui-flex alc">
      <view>观点</view>
      <view class="clearfix cell">
        <view class="fr btnComment" bindtap="tapShowCommentInput">发表观点</view>
      </view>
    </view>

    <view>
      <template is="commentItem" wx:for="{{commentList}}" wx:key="" data="{{...item,isNoReplyWrp:true}}"></template>
      <view class="loadingGif {{isLoading?'show':''}};">
        <image src="https://img.kanhua.yiwaiart.com/ironman/loading.gif?imageView2/2/w/130/h/130/q/50"></image>
