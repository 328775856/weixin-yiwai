  <view class="createTicketWrp" wx:if="{{!commentInputObj.isShowTrue&&discount!=0}}">
    <view class="mui-flex h100">
      <view class="descWrp cell">
        <view class="absmiddle">
          <view class="t1">{{discount}} 折</view>
          <view class="t2 txt-ovh">分享后即可获得EY独家打折券</view>
        </view>
      </view>
      <view class="btnCreate" bindtap="navigateToExhibitionTicket">免费领券</view>
    </view>
  </view>

</view>


