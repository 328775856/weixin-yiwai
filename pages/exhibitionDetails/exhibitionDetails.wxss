#exhibitionDetails {
  /* padding-bottom: 40rpx; */
  padding-bottom: 150rpx;
}

/* 头部图片 begin */

.headerImgWrp {
  height: 430rpx;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
}

.headerImgWrp .bgWrp {
  width: 100%;
  height: 470rpx;
  background-color: #fff;
  background-repeat: no-repeat;
  background-size: cover;
  /* background-position: center top; */
  background-position: center 15%;
  filter: blur(6px);
  position: absolute;
  top: -20rpx;
  left: -20px;
  z-index: -1;
}

.headerImgWrp .imgPosterWrp {
  width: 270rpx;
  height: 360rpx;
}

.headerImgWrp .descWrp .lWrp {
  color: #fff;
  font-size: 36rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  line-height: 52rpx;
}

.headerImgWrp .descWrp  .dateWrp {
  font-size: 26rpx;
  color: #fff;
  margin-top: 60rpx;
}

/* 头部图片 end */

/* 展览信息 begin */

.showInfoWrp {
  margin-bottom: 40rpx;
}

/* 展览信息 end */

/* 参展艺术家 begin */

.artistWrp {
  margin-bottom: 40rpx;
}

/* 参展艺术家 end */

/* 作品 begin */

.productWrp {
  margin-bottom: 40rpx;
}

/* 作品 end */

/* 评论 begin */

.commentWrp .titleWrp .btnComment {
  color: #fbca00;
  font-size: 30rpx;
  font-weight: normal;
}

/* 评论 end */

.btnMoreComment {
  margin-top: 40rpx;
  /* margin-bottom: 40rpx; */
}

.createTicketWrp {
  border-radius: 15px 15px 15px 3px;
  box-shadow: 8px 5px 25px rgba(27, 28, 31, 0.15);
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  height: 110rpx;
  overflow: hidden;
}

.createTicketWrp .descWrp {
  height: 100%;
  background-color: #fbca00;
  font-size: 38rpx;
  color: #fff;
  position: relative;
}

.createTicketWrp .descWrp .t1 {
  font-size: 38rpx;
  line-height: 52rpx;
}

.createTicketWrp .descWrp .t2 {
  font-size: 24rpx;
}

.createTicketWrp .btnCreate {
  width: 268rpx;
  height: 100%;
  background-color: #27282d;
}

.createTicketWrp .btnCreate {
  color: #fff;
  font-size: 38rpx;
  text-align: center;
  line-height: 110rpx;
}

.titleWrp {
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  font-size: 36rpx;
  color: #27282d;
}

.lineWrp {
  width: 100%;
  border-top: 20rpx solid #f6f6f6;
  /* border-top: 20rpx solid pink; */
  height: 0;
}

.plr30 {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
