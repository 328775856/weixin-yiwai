.mWrp .posterWrp {
  width: 100%;
  height: 390rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.mWrp .posterWrp image {
  width: 100%;
  height: 100%;
}

.mWrp .nameWrp {
  margin-top: 10rpx;
  color: #27282d;
  font-size: 36rpx;
  text-align: center;
}

/* 音频播放组件 begin */

.musicProgressWrp {
  position: relative;
  width: 100%;
  height: 8rpx;
  border-radius: 4rpx;
  margin: 0 auto;
  background: rgba(229, 229, 229, 1);
  /* background-color: #1B1C1F; */
  margin-top: 40rpx;
}

.musicProgressWrp .inrWrp {
  border-radius: 4rpx;
  background-color: #feea0a;
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 0%;
}

.musicProgressWrp .dotWrp {
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  /* width: 30rpx;
  height: 30rpx; */
  border-radius: 100%;
  background-color: #1b1c1f;
  top: 50%;
  left: 0%;
  transform: translateY(-50%);
  box-shadow: 6rpx 8rpx 20rpx rgba(27, 28, 31, 0.23);
}

/* 音频播放组件 end */

/* 操作 begin */
.opeWrp{
  width: 360rpx;
  margin: 0 auto;
  margin-top: 45rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.opeWrp .iconL, .opeWrp .iconR {
  width: 32rpx;
  height: 34rpx;
}

.opeWrp .iconPlay {
  width: 43rpx;
  height: 52rpx;
}

/* 操作 end */

.plr30 {
  padding-left: 30rpx;
  padding-right: 30rpx;
}
