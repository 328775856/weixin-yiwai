<!-- 评论列表模板1 begin-->
<template name="commentItem">
  <view class="commentItemWrp {{m2?'m2':''}}">
    <view class="sealWrp best" wx:if="{{isHot==1}}">
      <view class="wordsWrp">BEST</view>
    </view>
    <view class="mui-flex alc">
      <view class="headWrp" bindtap="navigationPersonalPage" data-type="{{isVip==0?1:isVip}}" data-be-visitor-id="{{customerId}}">
        <image class="headImg" src="{{customerImg}}"></image>
        <!-- 需要区分黄v和蓝v -->
        <image wx:if="{{isVip==2}}" class="iconV" src="{{'../../images/EY_icon_vip_2.png'}}"></image>
        <image wx:if="{{isVip==3}}" class="iconV" src="{{'../../images/EY_icon_vip_3.png'}}"></image>
      </view>
      <view class="cell">
        <view class="nameWrp txt-ovh">{{customerName}}</view>
        <view class="dateWrp">{{gmtCreate}}</view>
      </view>
    </view>
    <view class="contentWrp bk">{{content}}</view>
    <!-- <view class="likeWrp bk">意外艺术、博物馆...等16人点赞了这条评论。</view> -->

    <view class="opeWrp">
      <view class="clearfix">
        <view class="fr mui-flex alc">
          <view wx:if="{{!isNoReplyWrp}}" class="commentImgWrp fl mui-flex alc" bindtap="navigateToReply" data-commentid="{{id}}">
            <image src="../../images/EY_icon_comment@2x.png"></image>
            <view wx:if="{{replyNum>0}}">{{replyNum}}</view>
          </view>
          <view class="likeImgWrp fl  mui-flex alc" bindtap="tapSetCommentLike" data-comment-id="{{id}}">
            <image src="{{isLike&&isLike==1?'../../images/EY_icon_like_selected@2x.png':'../../images/EY_icon_like_normal@2x.png'}}"></image>
            <view wx:if="{{commentLikeNum>0}}">{{commentLikeNum}}</view>
          </view>
        </view>
      </view>
    </view>

  </view>
</template>
<!-- 评论列表模板1 end-->


