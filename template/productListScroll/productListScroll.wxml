<template name="productListScroll">
  <scroll-view class="productListScroll" scroll-x="true" scroll-with-animation="true">
    <view class="listWrp">
      <view class="itemWrp" wx:for="{{productList}}" wx:key="">
        <view class="imgOutWrp">
          <image mode="aspectFill" src="{{item.imageUrl}}?imageView2/1/w/300/h/200/q/50" bindtap="navigateToProductDetails" data-id="{{item.id}}"></image>
        </view>

        <view class="n1 txt-ovh">
          <text>{{item.name}}</text>
        </view>
      </view>
      <view class="itemWrp" wx:if="{{isMore}}">
        <view class="imgOutWrp btnMore" bindtap="tapLookMoreProduct">查看全部</view>
      </view>

    </view>
  </scroll-view>
</template>