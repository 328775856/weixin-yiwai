.productListScroll .listWrp {
  white-space: nowrap;
  /* width: 100%; */
  margin-left: 30rpx;
  /* padding-left: 30rpx; */
  /* box-sizing: border-box; */
}

.productListScroll .listWrp .itemWrp {
  vertical-align: top;
  display: inline-block;
  width: 300rpx;
  margin-right: 20rpx;
}

.productListScroll .listWrp .itemWrp  .imgOutWrp {
  width: 300rpx;
  height: 200rpx;
  border-radius: 5rpx;
}

.productListScroll .listWrp .itemWrp image {
  width: 300rpx;
  height: 200rpx;
  border-radius: 5rpx;
  vertical-align: middle;
  /* 默认图片 */
  background-image: url(https://img.kanhua.yiwaiart.com/picture/default_bg_2.png);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
}

.productListScroll .listWrp .itemWrp .n1 {
  margin-top: 20rpx;
  color: #27282d;
  font-size: 30rpx;
}

.productListScroll .btnMore {
  color: #27282d;
  font-size: 30rpx;
  line-height: 200rpx;
  text-align: center;
  background: linear-gradient(to right, #fbca00, #ffeb00);
}
