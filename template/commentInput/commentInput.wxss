.commentInputMask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9998;
  background: rgba(0, 0, 0, 0.75);
}

.commentInputWrp {
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  /* height: 100rpx; */
  box-sizing: border-box;
  z-index: 9999;
  padding-left: 30rpx;
  padding-right: 30rpx;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

.commentInputWrp input {
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
  padding: 0 30rpx;
  background-color: #f5f5f5;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.commentInputWrp .btnComment {
  font-size: 30rpx;
  color: #333;
  padding-left: 40rpx;
  padding-right: 10rpx;
}

.commentInputWrp .favoWrp {
  text-align: center;
  margin-left: 50rpx;
  margin-right: 20rpx;
  color: #999;
  font-size: 22rpx;
}

.commentInputWrp .favoWrp image {
  width: 42rpx;
  height: 40rpx;
}
