/* 授权登录模块 begin*/

.eyAuthWrp {
  position: fixed;
  top:0;
  left: 0;
  z-index: 99999;
  
  width: 100%;
  height: 100%;
  background-image: url(https://img.kanhua.yiwaiart.com/eyadmin/auth/bg.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  text-align: center;
}

.eyAuthWrp .eyAuthInrWrp {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  margin-top: -80rpx;
}

.eyAuthWrp .imgLogo {
  width: 218rpx;
  height: 201rpx;
  margin-bottom: 55rpx;
}

.eyAuthWrp .t1 {
  line-height: 60rpx;
  font-size: 36rpx;
}

.eyAuthWrp .btnLogin {
  background-image: url(https://img.kanhua.yiwaiart.com/eyadmin/auth/btn.png);
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  margin-top: 50rpx;
  width: 600rpx;
  height: 90rpx;
  border: none;
}

/* 授权登录模块 end*/
